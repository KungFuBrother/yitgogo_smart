<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12px" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_margin="4px"
                android:background="@drawable/edit_back_round"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="96px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="联系电话"
                    android:textColor="@color/textColorSecond"
                    android:textSize="16px" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="20px"
                    android:background="@color/divider" >
                </LinearLayout>

                <EditText
                    android:id="@+id/user_edit_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入联系电话"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/textColorThird"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_margin="4px"
                android:background="@drawable/edit_back_round"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="96px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="收货人"
                    android:textColor="@color/textColorSecond"
                    android:textSize="16px" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="20px"
                    android:background="@color/divider" >
                </LinearLayout>

                <EditText
                    android:id="@+id/user_edit_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入收货人姓名"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/textColorThird"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_margin="4px"
                android:background="@drawable/edit_back_round"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="96px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="收货区域"
                    android:textColor="@color/textColorSecond"
                    android:textSize="16px" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="20px"
                    android:background="@color/divider" >
                </LinearLayout>

                <TextView
                    android:id="@+id/user_edit_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择收货区域"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/textColorThird"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_margin="4px"
                android:background="@drawable/edit_back_round"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="96px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="详细地址"
                    android:textColor="@color/textColorSecond"
                    android:textSize="16px" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="20px"
                    android:background="@color/divider" >
                </LinearLayout>

                <EditText
                    android:id="@+id/user_edit_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入详细收货地址"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/textColorThird"
                    android:textSize="20px" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/user_edit_confirm"
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:layout_margin="16px"
            android:background="@drawable/button"
            android:text="收货人信息填写正确，立即下单！"
            android:textColor="@color/white"
            android:textSize="20px" />
    </LinearLayout>

</ScrollView>