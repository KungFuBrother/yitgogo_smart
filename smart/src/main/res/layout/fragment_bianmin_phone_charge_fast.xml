<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16px" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12px" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4px"
                        android:text="手机号"
                        android:textColor="@color/textColorSecond"
                        android:textSize="20px" />

                    <TextView
                        android:id="@+id/phone_charge_fast_area"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_margin="4px"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/blue"
                        android:textSize="20px" />
                </LinearLayout>

                <EditText
                    android:id="@+id/phone_charge_fast_number"
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_margin="4px"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center_vertical"
                    android:hint="输入要充值的手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:text="充值金额"
                    android:textColor="@color/textColorSecond"
                    android:textSize="20px" />

                <yitgogo.smart.view.InnerGridView
                    android:id="@+id/phone_charge_fast_amounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4" >
                </yitgogo.smart.view.InnerGridView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:text="实付金额:"
                    android:textColor="@color/textColorSecond"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/phone_charge_fast_amount"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/phone_charge_fast_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="64px"
                    android:layout_gravity="right"
                    android:layout_margin="4px"
                    android:background="@drawable/button_rec_blue"
                    android:gravity="center"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:text="立即充值"
                    android:textColor="@color/white"
                    android:textSize="20px" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>