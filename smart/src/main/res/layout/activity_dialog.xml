<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:background="@color/theme_title_background"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/dialog_activity_title"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="24px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/dialog_activity_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_activity_search_layout"
                android:layout_width="64px"
                android:layout_height="match_parent"
                android:padding="8px" >

                <ImageView
                    android:id="@+id/dialog_activity_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_circle"
                    android:padding="12px"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_search_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_activity_car_layout"
                android:layout_width="64px"
                android:layout_height="match_parent"
                android:padding="8px" >

                <ImageView
                    android:id="@+id/dialog_activity_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_circle"
                    android:padding="12px"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_car_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_activity_qrcode_layout"
                android:layout_width="64px"
                android:layout_height="match_parent"
                android:padding="8px" >

                <ImageView
                    android:id="@+id/dialog_activity_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_circle"
                    android:padding="12px"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_qrcode_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="64px"
                android:layout_height="match_parent"
                android:padding="8px" >

                <ImageView
                    android:id="@+id/dialog_activity_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_circle"
                    android:padding="12px"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_background" >

            <FrameLayout
                android:id="@+id/dialog_activity_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </FrameLayout>

            <TextView
                android:id="@+id/dialog_activity_disconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:gravity="center"
                android:padding="16px"
                android:text="无法连接网络，请检查网络设置"
                android:textColor="@color/white"
                android:textSize="16px"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/divider" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/dialog_activity_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone" >
    </FrameLayout>

</FrameLayout>