<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/back_white_rec_border"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center"
            android:text="请输入激活码"
            android:textColor="@color/blue"
            android:textSize="24px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32px" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_margin="32px"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16px"
                    android:text="YT"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20px" />

                <EditText
                    android:id="@+id/active_number_1"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16px"
                    android:paddingRight="16px"
                    android:text="-"
                    android:textColor="@color/textColorPrimary" />

                <EditText
                    android:id="@+id/active_number_2"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16px"
                    android:paddingRight="16px"
                    android:text="-"
                    android:textColor="@color/textColorPrimary" />

                <EditText
                    android:id="@+id/active_number_3"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16px"
                    android:paddingRight="16px"
                    android:text="-"
                    android:textColor="@color/textColorPrimary" />

                <EditText
                    android:id="@+id/active_number_4"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16px"
                    android:paddingRight="16px"
                    android:text="-"
                    android:textColor="@color/textColorPrimary" />

                <EditText
                    android:id="@+id/active_number_5"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16px" >

                <Button
                    android:id="@+id/active_exit"
                    android:layout_width="0px"
                    android:layout_height="64px"
                    android:layout_margin="16px"
                    android:layout_weight="1"
                    android:background="@drawable/button_rec_round"
                    android:gravity="center"
                    android:text="退出"
                    android:textColor="@color/blue"
                    android:textSize="20px" />

                <Button
                    android:id="@+id/active_button"
                    android:layout_width="0px"
                    android:layout_height="64px"
                    android:layout_margin="16px"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="20px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/active_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="28px"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px" />

        <TextView
            android:id="@+id/active_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4px"
            android:textColor="@color/textColorPrimary"
            android:textSize="16px" />
    </LinearLayout>

</FrameLayout>