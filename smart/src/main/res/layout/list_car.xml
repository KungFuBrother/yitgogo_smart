<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/list_car_select"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_car_selection"
            android:layout_width="48px"
            android:layout_height="match_parent"
            android:padding="8px"
            android:scaleType="centerInside"
            android:src="@drawable/iconfont_check_normal" />

        <ImageView
            android:id="@+id/list_car_image"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_margin="4px"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2px" >

            <TextView
                android:id="@+id/list_car_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2px"
                android:lines="3"
                android:textColor="@color/textColorPrimary"
                android:textSize="16px" />

            <TextView
                android:id="@+id/list_car_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2px"
                android:textColor="@color/textColorSecond"
                android:textSize="14px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_car_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2px"
                    android:textColor="@color/red"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/list_car_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2px"
                    android:singleLine="true"
                    android:textColor="@color/textColorSecond"
                    android:textSize="16px" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/list_car_counting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="8px" >

            <LinearLayout
                android:layout_width="36px"
                android:layout_height="match_parent"
                android:background="@drawable/back_trans_rec_border"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/list_car_count_add"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:background="@drawable/selector_trans_divider"
                    android:padding="8px"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_count_add" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider" >
                </LinearLayout>

                <TextView
                    android:id="@+id/list_car_count"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="16px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider" >
                </LinearLayout>

                <ImageView
                    android:id="@+id/list_car_count_delete"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:background="@drawable/selector_trans_divider"
                    android:padding="8px"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_count_delete" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_trans_divider" />

</FrameLayout>