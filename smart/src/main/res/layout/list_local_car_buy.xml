<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:background="@color/white"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:background="@drawable/selector_trans_divider"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4px" >

            <ImageView
                android:id="@+id/local_car_store_image"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_margin="4px"
                android:background="@drawable/back_trans_rec_border"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/local_car_store_name"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="4px"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="20px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <yitgogo.smart.view.InnerListView
            android:id="@+id/local_car_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1px"
            android:listSelector="@android:color/transparent" >
        </yitgogo.smart.view.InnerListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8px" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4px" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4px"
                        android:text="配送方式"
                        android:textColor="@color/textColorThird"
                        android:textSize="16px" />

                    <TextView
                        android:id="@+id/local_car_store_diliver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4px"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4px" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4px"
                        android:text="付款方式"
                        android:textColor="@color/textColorThird"
                        android:textSize="16px" />

                    <TextView
                        android:id="@+id/local_car_store_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4px"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:text="小计"
                    android:textColor="@color/textColorThird"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/local_car_store_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:textColor="@color/red"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/local_car_store_money_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:textColor="@color/textColorSecond"
                    android:textSize="16px" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />
    </LinearLayout>

</FrameLayout>