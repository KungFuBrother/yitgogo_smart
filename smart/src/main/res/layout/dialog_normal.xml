<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16px">

    <TextView
        android:id="@+id/single_choice_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16px"
        android:textColor="@color/textColorPrimary"
        android:textSize="20px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="8px">

        <Button
            android:id="@+id/single_choice_dialog_button_negative"
            android:layout_width="wrap_content"
            android:layout_height="48px"
            android:layout_margin="8px"
            android:background="@drawable/selector_white_rec_border"
            android:gravity="center"
            android:minWidth="96px"
            android:paddingLeft="16px"
            android:paddingRight="16px"
            android:textColor="@color/textColorSecond"
            android:textSize="16px" />

        <Button
            android:id="@+id/single_choice_dialog_button_positive"
            android:layout_width="wrap_content"
            android:layout_height="48px"
            android:layout_margin="8px"
            android:background="@drawable/button_rec_blue"
            android:gravity="center"
            android:minWidth="96px"
            android:paddingLeft="16px"
            android:paddingRight="16px"
            android:textColor="@color/white"
            android:textSize="16px" />

    </LinearLayout>

</LinearLayout>