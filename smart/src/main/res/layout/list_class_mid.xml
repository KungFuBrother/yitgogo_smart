<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4px" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_trans_rec_border"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/class_mid_name"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="@drawable/selector_white_divider"
            android:gravity="center_vertical"
            android:paddingLeft="8px"
            android:paddingRight="8px"
            android:textColor="@color/textColorSecond"
            android:textSize="16px" />

        <LinearLayout
            android:id="@+id/class_mid_min_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <yitgogo.smart.view.InnerListView
                android:id="@+id/class_mid_subclasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/divider"
                android:dividerHeight="1px"
                android:listSelector="@android:color/transparent" >
            </yitgogo.smart.view.InnerListView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>