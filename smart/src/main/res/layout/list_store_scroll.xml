<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16px"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"
        android:layout_marginTop="16px"
        android:background="@drawable/back_white_rec_border"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_store_image"
            android:layout_width="108px"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8px" >

            <TextView
                android:id="@+id/list_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="16px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="@color/textColorSecond"
                android:textSize="16px" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/list_store_address_selection"
        android:layout_width="wrap_content"
        android:layout_height="12px"
        android:layout_gravity="bottom|center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_item_locate_12px" />

</FrameLayout>