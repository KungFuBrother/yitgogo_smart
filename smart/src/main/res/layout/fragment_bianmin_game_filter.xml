<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16px" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:gravity="center"
                    android:text="游戏名称"
                    android:textColor="@color/textColorSecond"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/game_filter_name"
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_margin="4px"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center_vertical"
                    android:hint="选择游戏名称"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:gravity="center"
                    android:text="游戏区域"
                    android:textColor="@color/textColorSecond"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/game_filter_area"
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_margin="4px"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center_vertical"
                    android:hint="选择游戏区域"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4px"
                    android:gravity="center"
                    android:text="游戏服"
                    android:textColor="@color/textColorSecond"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/game_filter_server"
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_margin="4px"
                    android:background="@drawable/edit_back_round"
                    android:gravity="center_vertical"
                    android:hint="选择游戏服"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="20px" />
            </LinearLayout>

            <TextView
                android:id="@+id/game_filter_search"
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_margin="16px"
                android:background="@drawable/button_rec_blue"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="20px" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/game_filter_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_background"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/game_filter_hide"
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:layout_margin="32px"
            android:background="@drawable/selector_white_rec_border"
            android:gravity="center"
            android:text="上一步"
            android:textColor="@color/textColorSecond"
            android:textSize="20px" />

        <FrameLayout
            android:id="@+id/game_filter_fragment"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" >
        </FrameLayout>
    </LinearLayout>

</FrameLayout>