<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="oval">
            <stroke android:dashGap="0px" android:dashWidth="0px" android:width="1px" android:color="@color/divider" />

            <solid android:color="#D3D3D3" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="oval">
            <stroke android:dashGap="0px" android:dashWidth="0px" android:width="1px" android:color="@color/divider" />

            <solid android:color="@color/theme_background" />
        </shape></item>

</selector>